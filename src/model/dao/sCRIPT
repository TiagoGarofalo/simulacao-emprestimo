DROP DATABASE IF EXISTS SIMULAEMPRESTIMO;
CREATE DATABASE SIMULAEMPRESTIMO;
USE SIMULAEMPRESTIMO;

CREATE TABLE CLIENTE (
 ID_CLIENTE INT (11) NOT NULL
,NOME VARCHAR (100)
,CPF INT (11) PRIMARY KEY 
,EMAIL VARCHAR(100)

);
CREATE TABLE VENDEDOR (
ID_VENDEDOR INT (11) NOT NULL PRIMARY KEY
,NOME VARCHAR (100)
,CPF INT (11)
,DTNASCIMENTO DATE
,EMAIL VARCHAR (100)
);

CREATE TABLE CONTRATO (
 ID_CONTRATO INT(11) NOT NULL PRIMARY KEY
,VALOR_DO_CONTRATO INT(10)
,NUMERO_PARCELAS INT (12)
);

CREATE TABLE SIMULACAO (
ID_SIMULACAO INT NOT NULL primary key
,ID_CLIENTE INT NOT NULL
,ID_CONTRATO INT NOT NULL
,ID_VENDEDOR INT NOT NULL
,DATAINICIO DATE
,DATAFINAL DATE
,TXJUROS INT (10)
,QNTPARCERLAS INT (12)
,VALORJUROS INT (12)
,VALORTOTALEMPRESTIMO INT (12)
,constraint fk_cliente foreign key(ID_CLIENTE)references CLIENTE(CPF)
,constraint fk_vendedor foreign key(ID_VENDEDOR)references VENDEDOR(ID_VENDEDOR)
,constraint fk_contrato foreign key(ID_contrato)references contrato(ID_contrato)
);

drop table simulacao;

create table vendedores(
Id_vendedores int not null primary key
,login varchar(45)
,senha varchar(45)
,online boolean
);