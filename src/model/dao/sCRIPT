DROP DATABASE IF EXISTS SIMULAEMPRESTIMO;
CREATE DATABASE SIMULAEMPRESTIMO;
USE SIMULAEMPRESTIMO;

CREATE TABLE CLIENTE (
ID_CLIENTE INT NOT NULL AUTO_INCREMENT PRIMARY KEY
,CPFCLIENTE bigINT (15) NOT NULL 
,NOME VARCHAR (100)
,EMAIL VARCHAR(100)
);


CREATE TABLE VENDEDOR (
ID_VENDEDOR INT AUTO_INCREMENT PRIMARY KEY
,CPFVENDEDOR BIGINT (11) NOT NULL 
,NOME VARCHAR (100)
,DTNASCIMENTO DATE
,EMAIL VARCHAR (100)
);

CREATE TABLE CONTRATO (
 ID_CONTRATO INT NOT NULL PRIMARY KEY AUTO_INCREMENT
,VALOR_DO_CONTRATO INT(10)
,NUMERO_PARCELAS INT (12)
);

 
CREATE TABLE SIMULACAO (
 ID_SIMULACAO INT NOT NULL primary key AUTO_INCREMENT
,ID_CLIENTE int NOT NULL
,ID_VENDEDOR INT NOT NULL
,ID_CONTRATO INT NOT NULL
,DTINICIO date
,DTFINAL DATE
,TXJUROS FLOAT (10)
,QNTPARCERLAS BIGINT(12)
,VJUROS FLOAT (12)
,TOTALEMP BIGINT (12)
,constraint fk_cliente foreign key(ID_CLIENTE)references CLIENTE(ID_CLIENTE)
,constraint fk_vendedor foreign key(ID_VENDEDOR)references VENDEDOR(ID_VENDEDOR)
,CONSTRAINT FK_CONTRATO foreign key(ID_CONTRATO)references CONTRATO(ID_CONTRATO)
);
